<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#161616"
    android:orientation="vertical"
    android:padding="20dp">


  <androidx.cardview.widget.CardView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="16dp"
      app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="14dp">
<ImageView
    android:id="@+id/btnMenu"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/ic_baseline_menu_24">
</ImageView>
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

          <TextView
              android:id="@+id/tv_maSV"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:fontFamily="@font/roboto_bold"
              android:text="MSV : "
              android:textColor="#fdb501"
              android:textSize="24dp" />

          <TextView
              android:id="@+id/tv_tenSV"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:fontFamily="@font/roboto_bold"
              android:text="TSV : "
              android:textColor="#fdb501"
              android:textSize="24dp" />

          <TextView
              android:id="@+id/tvLop"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:fontFamily="@font/roboto_bold"
              android:text="Lop : "
              android:textColor="#fdb501"
              android:textSize="24dp" />

          <TextView
              android:id="@+id/tvNganh"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:fontFamily="@font/roboto_bold"
              android:text="Ngành : "
              android:textColor="#fdb501"
              android:textSize="24dp" />

          <TextView
              android:id="@+id/tvKhoa"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:fontFamily="@font/roboto_bold"
              android:text="Khoa : "
              android:textColor="#fdb501"
              android:textSize="24dp" />


        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp">

          <LinearLayout
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="vertical">

            <TextView
                android:id="@+id/tv_maSV2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:gravity="center_horizontal"
                android:text="2050531200317"
                android:textAlignment="center"
                android:textColor="#fdb501"
                android:textSize="24dp" />

            <TextView
                android:id="@+id/tv_tenSV2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:gravity="center_horizontal"
                android:text="Trần Anh tuấn"
                android:textAlignment="center"
                android:textColor="#fdb501"
                android:textSize="24dp" />

            <TextView
                android:id="@+id/tvLop2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:gravity="center_horizontal"
                android:text="20T3"
                android:textAlignment="center"
                android:textColor="#fdb501"
                android:textSize="24dp" />

            <TextView
                android:id="@+id/tvNganh2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:gravity="center_horizontal"
                android:text="Công Nghệ Thông Tin"
                android:textAlignment="center"
                android:textColor="#fdb501"
                android:textSize="24dp" />

            <TextView
                android:id="@+id/tvKhoa2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:gravity="center_horizontal"
                android:text="Công Nghệ Số"
                android:textAlignment="center"
                android:textColor="#fdb501"
                android:textSize="24dp" />

          </LinearLayout>


        </RelativeLayout>

      </LinearLayout>


    </LinearLayout>

  </androidx.cardview.widget.CardView>


</LinearLayout>